
<div class="section">
  <h1>Pick up customer <%= @customer.fname %></h1>

  <table>
      <tr>
        <th>Id:</th><td><%= @job.id %></td>
      </tr>
      <tr>
        <th>Driver:</th><td><%= @driver.fname %> <%= @driver.lname %></td>
      </tr>
      <tr>
        <th>Customer:</th><td><%= @customer.fname %> <%= @customer.lname %></td>
      </tr>
      <tr>
        <th>Time:</th><td><%= @job.pickup_time %></td>
      </tr>
      <tr>
        <th>Pick-up location:</th><td><%= Address.find(@job.location1_id).title %></td>
      </tr>
      <tr>
        <th>Drop-off location:</th><td><%= Address.find(@job.location2_id).title %></td>
      </tr>
        <tr>
        <th>Status:</th>
        <%= form_for(@job) do |f| %>
          <td><%= f.select :status, Job.statuses.keys.to_a%></td>
        <% end %>
      </tr>
  </table>
</div>

<div class="section">
  <%= link_to 'Edit', edit_job_path %>
  <p></p>
  <%= link_to 'See all jobs', jobs_path %>

</div>