<div class="section">

<%= form_for profile, url: profile_path do |f| %>

      <div class="field">
        <%= f.label :Account_role %><br />
        <%= f.select :role, User.roles.keys.to_a %>
      </div>

      <table>
      <tr>
        <th>About me</th>
        <th>Address</th>
      </tr>
      <tr>
        <td><%= f.label "Last name".to_sym %><br>
          <%= f.text_field :lname, class: "textfield" %>
        </td>
        <td>
          <%= f.label :line_1 %><br>
          <%= f.text_field :addr1, class: "textfield" %>
        </td>
      </tr>
      <tr>
        <td><%= f.label "First name".to_sym %><br>
          <%= f.text_field :fname, class: "textfield" %>
        </td>
        <td>
          <%= f.label :line_2 %><br>
          <%= f.text_field :addr2, class: "textfield" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label "Mobile number".to_sym %><br>
          <%= f.text_field :phnum, class: "textfield" %>
        </td>
        <td>
          <%= f.label :town %><br>
          <%= f.text_field :town, class: "textfield" %>
        </td>
      </tr>
      <tr>
        <td>&nbsp</td>
        <td>
          <%= f.label :postcode %><br>
          <%= f.text_field :postcode, class: "textfield" %>
        </td>
      <tr>
        <td>
          <%= f.label :picture %><br>
          <%= f.file_field :avatar, class: "fileinput" %>
        </td>
        <td>
          <%= f.label :county %><br>
          <%= f.text_field :county, class: "textfield" %>
        </td>
      </tr>


      <% if profile.driver? %>
        <tr>
          <th>Vehicle details</th>
          <th>&nbsp</th>
        </tr>

        <tr>
          <td>
            <%= f.label :vehicle %><br>
            <%= f.file_field :carpic, class: "fileinput" %>
          </td>
          <td>
            <%= f.label :reg %><br>
            <%= f.text_field :reg, class: "textfield" %>
          </td>
        </tr>
      <% end %>

    </table>

  <div class="actions">
    <%= f.submit %>
  </div>

  <% if profile.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

        <ul>
          <% profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
      </div>
  <% end %>
<% end %>
</div>